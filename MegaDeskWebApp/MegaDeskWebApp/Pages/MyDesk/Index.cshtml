                @Html.DisplayFor(modelItem => item.drawerCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.materialCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rushCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalCost)
            </td>
