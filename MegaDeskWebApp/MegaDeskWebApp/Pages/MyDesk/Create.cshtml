@page
@model MegaDeskWebApp.Pages.MyDesk.CreateModel

@{
    ViewData["Title"] = "Add a New Quote";
}

<h2>Add a New Quote</h2>

<div class="hero_image">
    <img src="~/images/measure_1200.png" alt="carpenter tools" />
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.purchaseDate" class="control-label"></label>
                <input asp-for="DeskQuote.purchaseDate" class="form-control" />
                <span asp-validation-for="DeskQuote.purchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.firstName" class="control-label"></label>
                <input asp-for="DeskQuote.firstName" class="form-control" />
                <span asp-validation-for="DeskQuote.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.lastName" class="control-label"></label>
                <input asp-for="DeskQuote.lastName" class="form-control" />
                <span asp-validation-for="DeskQuote.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.width" class="control-label"></label>
                <input asp-for="Desk.width" class="form-control" />
                <span asp-validation-for="Desk.width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.depth" class="control-label"></label>
                <input asp-for="Desk.depth" class="form-control" />
                <span asp-validation-for="Desk.depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.drawerNum" class="control-label"></label>
                <input asp-for="Desk.drawerNum" class="form-control" />
                <span asp-validation-for="Desk.drawerNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.materialType" class="control-label"></label>
                <select asp-for="Desk.materialType" class="form-control">
                    <option value="Pine">Pine</option>
                    <option value="Laminate">Laminate</option>
                    <option value="Oak">Oak</option>
                    <option value="Rosewood">Rosewood</option>
                    <option value="Veneer">Veneer</option>
                </select>
                <span asp-validation-for="Desk.materialType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.rushDays" class="control-label"></label>
                <select asp-for="Desk.rushDays" class="form-control">
                    <option value="0">No rush</option>
                    <option value="3">3 days</option>
                    <option value="5">5 days</option>
                    <option value="7">7 days</option>
                </select>
                <span asp-validation-for="Desk.rushDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Quote" class="btn btn-default blue-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
